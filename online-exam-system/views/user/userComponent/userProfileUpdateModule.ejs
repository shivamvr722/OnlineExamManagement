<div class="container" id="userProfileUpdateDiv">
  <h1>Welcome <span id="welcomeUserName"></span></h1>
  <form method="POST" id="form" enctype="multipart/form-data">
    <div class="row gutters">
      <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
        <div class="card h-100 vinfo">
          <div class="card-body">
            <div class="account-settings">
              <div class="user-profile">
                <div class="user-avatar">
                  <a href="" target="_blank" id="showImage"><img src="/assets/profileDefaultImage.jpg" id="profileImage" alt="User Profile"></a>
                  <div style="display: flex;">
                    <label for="image" class="editImageButton blueBtn">Edit</label>
                    <p id="remove" class="editImageButton blueBtn">Remove</p>
                  </div>
                  <input type="file" name="image" id="image" style="display: none;">
                  <p id="rimage"></p>
                </div>
                <h5 id="fnameUser"></h5>
                <h6 id="emailUser"></h6>
              </div>
              <div class="about">
                <h5>About</h5>
                <!-- <p id="about">I'm Shivam. Full Stack Designer I enjoy creating user-centric, delightful and human experiences.</p> -->
                <textarea name="about" id="about" cols="20" rows="3" class="inputStyle" placeholder="about yourself"></textarea><span class="req" id="rabout"></span>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
        <div class="card h-100">
          <div class="card-body">
            <div class="row gutters vinfo">
              <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <h6 class="mb-2 ititle">Personal Details</h6>
              </div>
              <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                <div class="form-group">
                  <input type="text" class="form-control userProfile" name="id" id="id" hidden>
                  <label for="fname">First Name</label><span class="req" id="rfname"></span>
                  <input type="text" class="form-control userProfile validate inputStyle" name="fname" id="fname" placeholder="Enter first name">
                </div>
              </div>
              <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                <div class="form-group">
                  <label for="lname">Last Name</label><span class="req" id="rlname"></span>
                  <input type="text" class="form-control userProfile validate inputStyle" name="lname" id="lname" placeholder="Enter last name">
                </div>
              </div>
              <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                  <div class="form-group">
                    <label for="email">Email</label><span class="req" id="remail"></span>
                    <input type="email" class="form-control userProfile validate inputStyle" name="email" id="email" placeholder="Enter email ID">
                  </div>
              </div>
              <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                <div class="form-group">
                  <label for="phone_no">Phone</label>
                  <input type="text" class="form-control userProfile validate inputStyle" name="phone_no" id="phone_no" placeholder="Enter phone number">
                  <span class="req" id="rphone_no" style="font-size: 13px;"></span>
                </div>
              </div>
              <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                <div class="form-group">
                    <label for="dob">Date Of Birth</label><span class="req" id="rdob"></span>
                    <input type="url" class="form-control userProfile validate inputStyle" name="dob" id="dob" placeholder="YYYY-MM-DD">
                </div>
              </div>
            </div>
            <div class="row gutters vinfo">
              <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <h6 class="mt-3 mb-2 ititle">Address</h6>
              </div>
              <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                <div class="form-group">
                  <label for="address">Address</label><span class="req" id="raddress"></span>
                  <input type="name" class="form-control userProfile inputStyle" name="address" id="address" placeholder="Enter Address">
                </div>
              </div>
              <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                <div class="form-group">
                  <label for="city">City</label><span class="req" id="rcity"></span>
                  <input type="name" class="form-control userProfile inputStyle"  name="city" id="city" placeholder="Enter City">
                </div>
              </div>
              <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                <div class="form-group">
                  <label for="state">State</label><span class="req" id="rstate"></span>
                  <input type="text" class="form-control userProfile inputStyle" name="state" id="state" placeholder="Enter State">
                </div>
              </div>
              <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                <div class="form-group">
                  <label for="zipcode">Zip Code</label>
                  <input type="text" class="form-control userProfile inputStyle" name="zipcode" id="zipcode" placeholder="Zipcode">
                  <span class="req" id="rzipcode" style="font-size: 13px;"></span>
                </div>
              </div>
          </div>
  </form>

  <div class="row gutters vinfo">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
      <div class="text-right">
        <a href="/user/userProfile"><p name="cancel" class="btn btn-secondary" style="border: none;" id="cancel">Cancel</p></a>
        <p name="update" class="btn btn-primary blueBtn" style="background-color: #002f4b; border: none;" id="update">Update</p>
      </div>
    </div>
  </div>
</div>
  
<script src="/js/userProfileUpdate.js"></script>