<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Update Questions</title>
  <link rel="stylesheet" href="/css/bootstrap.min.css">

  <link rel="stylesheet" href="/css/exportQuestions.css">
  <link rel="icon" type="image/x-icon" href="/assets/favicon_examIcon3.ico">


</head>

<body>
  <div id="questionContainer" class=" mt-5 d-flex flex-column align-items-center   d-flex-col flex-dir-col-gap-1 mb-5">


    <% for(var i=0;i<data.id.length;i++){ %>
      <div class="question border border-dark rounded p-4 flex-dir-col-gap-1" id="question-<%=i+1%>">
        <div class="form-group ">
          <div class="que-head">
            <input type="hidden" name="id-<%= i+1 %>" value="<%= data.id[i] %>">
            <input class="deleteHiddenInput" type="hidden" name="delete-<%= i+1 %>" value="0">
            <label for="question-<%= i+1 %> " class="fs-4">Question <span>
                <%= i+1 %>
              </span> </label>
            <select class="form-select select-topic" id="select-topic-<%= i+1 %>" name="topic-<%= i+1 %>"
              aria-label="Default select example">
              <% Object.keys(topics).forEach((topic)=>{ %>
                <option value="<%= topic %>" <%=data.topic_id[i]===topics[topic]? 'selected' : "" %>>
                  <%= topic %>
                </option>
                <% }) %>
            </select>

            <select class="form-select select-difficulty" id="select-difficulty-<%= i+1 %>" name="difficulty-<%= i+1 %>"
              aria-label="Default select example">
              <% Object.keys(difficulties).forEach((difficulty)=>{ %>
                <option value="<%= difficulty %>" <%=data.difficulty_id[i]===difficulties[difficulty]? 'selected' : ""
                  %>>
                  <%= difficulty %>
                </option>
                <% }) %>
            </select>
            <div class="d-flex align-items-center gap-2">
              <label class="form-check-label " for="score-<%= i+1 %>">Marks(score)</label>
              <input type="number" class="form-control queScore smallInput" id="formGroupScoreInput" placeholder="Score"
                name="scoreInput-<%= i+1 %>" value="<%= data.score[i] %>">

            </div>
          </div>
          <div class="que-text">
            <%= data.questions[i] %>
          </div>
        </div>
        <div class="form-check d-flex align-items-center gap-2">
          <input type="hidden" name="optionId-<%= i+1 %>-1" value="<%= options[data.id[i]][0].id %>">
          <input class="form-check-input" type="radio" name="optionRadios-<%= i+1 %>" id="optionRadios-<%= i+1 %>"
            value="1" <%=options[data.id[i]][0].isAnswer===1?'checked' : '' %> >
          <label class="form-check-label " for="optionRadios-<%= i+1 %>-1">
          </label>
          <input type="text" name="optionInput-<%= i+1 %>-1" class="form-control optionInput" id="formGroupExampleInput"
            placeholder="Question option" value="<%= options[data.id[i]][0].option_value %>">
        </div>
        <div class="form-check d-flex align-items-center gap-2">
          <input type="hidden" name="optionId-<%= i+1 %>-2" value="<%= options[data.id[i]][1].id %>">
          <input class="form-check-input" type="radio" name="optionRadios-<%= i+1 %>" id="optionRadios-<%= i+1 %>"
            value="2" <%=options[data.id[i]][1].isAnswer===1?'checked' : '' %>>
          <label class="form-check-label " for="optionRadios-<%= i+1 %>-2">
          </label>
          <input type="text" name="optionInput-<%= i+1 %>-2" class="form-control optionInput" id="formGroupExampleInput"
            placeholder="Question option" value="<%= options[data.id[i]][1].option_value %>">
        </div>
        <div class="form-check d-flex align-items-center gap-2">
          <input type="hidden" name="optionId-<%= i+1 %>-3" value="<%= options[data.id[i]][2].id %>">
          <input class="form-check-input" type="radio" name="optionRadios-<%= i+1 %>" id="optionRadios-<%= i+1 %>"
            value="3" <%=options[data.id[i]][2].isAnswer===1?'checked' : '' %>>
          <label class="form-check-label " for="optionRadios-<%= i+1 %>-3">
          </label>
          <input type="text" name="optionInput-<%= i+1 %>-3" class="form-control optionInput" id="formGroupExampleInput"
            placeholder="Question option" value="<%= options[data.id[i]][2].option_value %>">
        </div>
        <div class="form-check d-flex align-items-center gap-2">
          <input type="hidden" name="optionId-<%= i+1 %>-4" value="<%= options[data.id[i]][3].id %>">
          <input class="form-check-input" type="radio" name="optionRadios-<%= i+1 %>" id="optionRadios-<%= i+1 %>"
            value="4" <%=options[data.id[i]][3].isAnswer===1? 'checked' : '' %>>
          <label class="form-check-label " for="optionRadios-<%= i+1 %>-4">
          </label>
          <input type="text" name="optionInput-<%= i+1 %>-4" class="form-control optionInput" id="formGroupExampleInput"
            placeholder="Question option" value="<%= options[data.id[i]][3].option_value %>">
        </div>
      </div>
      <% } %>
  </div>
</body>

</html>