                  </div>

                  <div class="card-body">
                    <div
                      class="recordsContainer table table-responsive table-bordered"
                      id="recordsContainer"
                    ></div>
                    <p id="norecordsfound"></p>

                    <div class="paginationController" id="paginationController">
                      <input
                        type="button"
                        id="paggingLink-prev"
                        value="Previous"
                        onclick="prevPage()"
                        disabled
                      />
                      <span id="pageTagSpan">1</span>
                      <input
                        type="button"
                        id="paggingLink-next"
                        value="Next"
                        onclick="nextPage()"
                      />
                    </div>
                  </div>
                </div>
              </div>
