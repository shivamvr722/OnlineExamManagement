                </div>

                <div class="fboxnew3">
                    <button type="button" class="btn cancel" onclick="closeViewForm()">Close</button>
                </div>
               
            </div>
        </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/adminFeedback.js"></script>

</body>
</html>